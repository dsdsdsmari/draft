<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetStartedActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="125dp"
        android:layout_height="147dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.077"
        app:srcCompat="@drawable/orange_logo" />

    <TextView
        android:id="@+id/lbl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:layout_marginEnd="149dp"
        android:fontFamily="@font/lexend_bold"
        android:text="Let's Get Started!"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/lbl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:layout_marginEnd="149dp"
        android:fontFamily="@font/lato_bold"
        android:text="Let's dive into your account"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <Button
        android:id="@+id/google"
        android:layout_width="309dp"
        android:layout_height="45dp"
        android:layout_marginStart="155dp"
        android:layout_marginEnd="147dp"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/lexend_medium"
        android:text="Continue with Google"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/google_colored"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/twitter"
        android:layout_width="309dp"
        android:layout_height="45dp"
        android:layout_marginStart="155dp"
        android:layout_marginEnd="147dp"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/lexend_medium"
        android:text="Continue with X (Twitter)"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/twitter_colored"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.725" />

        <Button
            android:id="@+id/insta"
            android:layout_width="309dp"
            android:layout_height="45dp"
            android:layout_marginStart="155dp"
            android:layout_marginEnd="147dp"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/lexend_medium"
            android:text="Continue with Instagram"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ig_colored"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.649" />

    <Button
        android:id="@+id/fb"
        android:layout_width="309dp"
        android:layout_height="45dp"
        android:layout_marginStart="155dp"
        android:layout_marginEnd="147dp"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/lexend_medium"
        android:text="Continue with Facebook"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/fb_colored"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.573" />

    <Button
        android:id="@+id/signUp"
        android:layout_width="309dp"
        android:layout_height="52dp"
        android:layout_marginStart="133dp"
        android:layout_marginEnd="169dp"
        android:text="Sign Up"
        android:backgroundTint="#FFAF37"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.417"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.859" />

    <Button
        android:id="@+id/signIn"
        android:layout_width="309dp"
        android:layout_height="52dp"
        android:layout_marginStart="133dp"
        android:layout_marginEnd="169dp"
        android:text="Sign In"
        android:textColor="#FFAF37"
        android:backgroundTint="#F8F3EC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.417"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.926" />


</androidx.constraintlayout.widget.ConstraintLayout>