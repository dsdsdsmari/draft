<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4f4"
    tools:context=".DogStep3">

    <TextView
        android:id="@+id/textView"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:text="Breed Preferences"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/lexend_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:text="Specify your preferences for the breed of the animal you'd like to adopt based on your previous choice. Select all that apply"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/lexend_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.01999998" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.1">

        <CheckBox
            android:id="@+id/checkBoxBulldog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Bulldog"
            android:fontFamily="@font/lexend_bold"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <CheckBox
            android:id="@+id/checkBoxCorgi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Corgi"
            android:fontFamily="@font/lexend_bold"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <CheckBox
            android:id="@+id/checkBoxGermanShepherd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" German Shephered"
            android:fontFamily="@font/lexend_bold"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <CheckBox
            android:id="@+id/checkBoxGoldenRetriever"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Golden Retriever"
            android:fontFamily="@font/lexend_bold"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <CheckBox
            android:id="@+id/checkBoxPoodle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Poodle"
            android:fontFamily="@font/lexend_bold"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <CheckBox
            android:id="@+id/checkBoxShihTzu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Shih Tzu"
            android:fontFamily="@font/lexend_bold"
            android:textSize="16sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/main_bg"
        android:fontFamily="@font/lexend_bold"
        android:onClick="step2"
        android:text="Continue"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.75" />

</androidx.constraintlayout.widget.ConstraintLayout>